rules_version = '2';

// Firebase Storage Rules para Sara Ramos
// Cole essas regras em: Firebase Console -> Storage -> Rules

service firebase.storage {
  match /b/{bucket}/o {
  
    // Função auxiliar para verificar admin
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email in ['natanael2ilva@gmail.com', 'sararamos.prof@gmail.com', 'sararamos.souza@gmail.com'];
    }

    // Produtos - imagens dos produtos (PÚBLICAS para o site funcionar)
    match /products/{allPaths=**} {
      allow read: if true;
      
      // Upload/Update/Delete apenas Admin
      allow write: if isAdmin();
    }

    // Downloads Digitais - PDFs, ZIPs, etc. (PRIVADO TOTAL)
    // Ninguem lê via Client SDK (bloqueia acesso direto via URL pública antiga)
    // O download só funciona via API (Admin SDK)
    match /digital-downloads/{allPaths=**} {
      allow read: if false; 
      allow write: if isAdmin();
    }
    
    // Regra padrão: negar tudo
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
